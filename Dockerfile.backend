# DHL RAG System Backend
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY dhl_logistics_rag/ ./dhl_logistics_rag/
COPY scripts/ ./scripts/
COPY config/ ./config/

# Copy data directory (PDFs)
COPY data/ ./data/

# Set environment variables
ENV PYTHONPATH=/app
ENV OLLAMA_BASE_URL=http://ollama:11434

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "from dhl_logistics_rag.utils import check_ollama_status; print(check_ollama_status())"

# Run application
CMD ["python", "-m", "scripts.main"]
